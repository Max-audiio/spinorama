hb = -120
vb = 180
hs = 35
vs = 70
arrow = draw.Marker(-0.1, -0.51, 0.9, 0.5, scale=4, orient="auto", stroke_opacity=1)
arrow.append(draw.Lines(-0.1, 0.5, -0.1, -0.5, 0.9, 0, fill="orange", close=True, stroke_opacity=1))
